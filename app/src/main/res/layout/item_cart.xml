<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center" />

            <com.app.ebook.util.RoundCornerImageView
                android:id="@+id/imageViewBook"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/download" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewBook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="Book Name"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageViewDelete"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/ic_delete"
                            app:tint="@android:color/holo_red_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject:"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/mini_text" />

                        <TextView
                            android:id="@+id/textViewSubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewBookName"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/subject"
                            android:singleLine="true"
                            android:text="Bengali"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/mini_text"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class VII"
                        android:textColor="@color/blue_3C7AF0"
                        android:textSize="@dimen/mini_text"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@color/grey_CAC7C7" />

                    <TextView
                        android:id="@+id/textViewBoard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="ICSC"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/mini_text" />

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text="Rs. 200"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/medium_text"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.1"
            android:background="#707070" />
    </LinearLayout>
</layout>