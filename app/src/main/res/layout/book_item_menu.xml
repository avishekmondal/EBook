<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/layoutWishList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewWishList"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_shortlist"
                            app:tint="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewWishListTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="@dimen/_80sdp"
                                android:text="Wishlist"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/mini_text"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewWishListSubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add to list"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/micro_text" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/viewWishlist"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/grey_F1F1F2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="@dimen/xxlarge_text"
                            android:textStyle="bold"
                            app:tint="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subscribe"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/mini_text"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subscribe to the book"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/micro_text" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/grey_F1F1F2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_cart"
                            app:tint="@color/black_333333" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add To Cart"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/mini_text"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proceed to cart"
                                android:textAllCaps="true"
                                android:textColor="@color/black_333333"
                                android:textSize="@dimen/micro_text" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</layout>